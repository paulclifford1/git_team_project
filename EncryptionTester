package week3;

import java.util.Scanner;

public class EncryptionTester {
	private String password = null;
	
		
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		//Construct Password Object
		//Encryption pass = new Encryption();
		
		Scanner keyboardIn = new Scanner(System.in);
		
		//String attempt = keyboardIn.next();
		
		while(password == null){
			System.out.print("Please Enter A New Password:");
			
			String password1 = keyboardIn.next();
			
			System.out.print("Please Verify New Password:");
			
			String password2 = keyboardIn.next();
			
			if(password1.equals(password2)){
				String password = password1;
				System.out.println("You New Password Has Been Set");
			}
			else{
				//password1 = password2 = null;
				System.out.println("Your Passwords Do Not Match - Please Try Again");
			}
		}
		
		System.out.println("Please Enter Your Password");
		String attempt = keyboardIn.next();
		
		if(attempt.equals(password)){
			System.out.println("Password Correct");
		}
			else{
				System.out.println("Password Incorrect");
			}
		
	}

}
